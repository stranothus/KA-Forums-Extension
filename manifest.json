{
    "manifest_version" : 2,
    "name" : "KA Forums Extension",
    "version" : "0.0.0",
    "description" : "Enhances KA forums with automatic show more and post searching.",
    "permissions": [
        "activeTab",
        "tabs",
        "declarativeContent",
        "https://www.khanacademy.org/*",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": ["https://www.khanacademy.org/*"],
            "js": ["content.js"],
            "css": ["content.css"]
        }
    ]
}